# Dockerfile.dev
FROM node:22-alpine

# Instalar versão específica do pnpm
RUN corepack enable && corepack prepare pnpm@10.18.3 --activate

WORKDIR /app

# Copiar todo o diretório raiz (exceto o que está no .dockerignore)
COPY . .

# Instalar dependências SEM frozen lockfile com CI=true
RUN CI=true pnpm install

# Expor porta do Vite
EXPOSE 5173

# Comando para desenvolvimento
CMD ["pnpm", "run", "dev", "--", "--host", "0.0.0.0"]
